server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;
    index index.html index.htm;

    server_name _;

    location / {
        try_files $uri $uri/ =404;
    }

    # Дополнительные настройки для обработки CSS
    location ~ \.css$ {
        add_header  Content-Type    text/css;
    }

    location ~ \.js$ {
        add_header  Content-Type    application/javascript;
    }
}
