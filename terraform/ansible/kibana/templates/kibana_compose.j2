version: '3.8'
services:
  kibana:
    image: local-kibana:8.12.2
    container_name: kibana
    environment:
      - ELASTICSEARCH_HOSTS=http://{{ hostvars[groups['elastic'][0]].ansible_host }}:9200
      - SERVER_HOST=0.0.0.0
      - SERVER_NAME=kibana
      - NODE_OPTIONS=--max-old-space-size=4096
      - ELASTICSEARCH_REQUESTTIMEOUT=300000
      - KIBANA_MONITORING_ENABLED=false
      - ELASTICSEARCH_STRICT_BROWSER_CHECK=false
    ports:
      - "5601:5601"
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:5601/api/status"]
      interval: 30s
      timeout: 60s
      retries: 30
      start_period: 5m
